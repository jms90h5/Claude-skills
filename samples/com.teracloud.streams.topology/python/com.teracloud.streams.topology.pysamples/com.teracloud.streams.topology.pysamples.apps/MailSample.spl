namespace com.teracloud.streams.topology.pysamples.apps;

use com.teracloud.streams.topology.pysamples.mail::simplesendmail ;

public composite MailSample
{
	graph
		(stream<rstring f, rstring t, rstring msg> Beacon_1_out0) as Beacon_1 = Beacon()
		{
		param
		iterations:1;
		output Beacon_1_out0:
		     f = getSubmissionTimeValue("from"),
		     t = getSubmissionTimeValue("to"),
		     msg = "Hello from a Python function running in Streams!";
		}

		() as simplesendmail_2 =
			simplesendmail(Beacon_1_out0)
		{
		}

}

