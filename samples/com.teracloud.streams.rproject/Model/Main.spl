use com.teracloud.streams.rproject::* ;
/* This sample will use an initialization script to create a linear regression model 
 * then pass individual tuples with sample data to be scored against that model.
 * The particular model is generated from data that represents the results of plant growth 
 * based on amount of fertilizer given.
 * The rscript that does the prediction expects an id and amount of fertilizer, 
 * and produces a prediction of growth.
 *     
 */
composite Main
{
	param
		expression $rCommand : getSubmissionTimeValue("rCommand",
			"/usr/bin/R --vanilla") ;
	graph
	// generate some numbers
		stream<int32 id, float32 fertilizer> inStream = Beacon()
		{
			param
				iterations : 10u ; // iterate 10 times

			output
				inStream : id =(int32) IterationCount(), fertilizer =(float32)
					IterationCount() * 2fw ;
		}

		// call the r script that will create the prediction
		stream<int32 id, float32 fertilizer, float32 growth> analyzedStream =
			RScript(inStream)
		{
			param
				rCommand : $rCommand;
				initializationScriptFileName : "etc/initialize.r" ;
				rScriptFileName :  "etc/process.r" ;
				streamAttributes : id, fertilizer ;
				rObjects : "plantID", "fertilizer" ; // these are the variable names the R script expects

			output
				analyzedStream : growth = fromR("prediction") ; // prediction is the variable name the r script produces

		}

		// send the results to a file
		() as dbg = FileSink(analyzedStream)
		{
			param
				format : txt ;
				file : "result.txt" ;
		}

}

